<UserControl x:Class="SRT2Speech.AppWindow.Views.AIStudioControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SRT2Speech.AppWindow.Views"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <StackPanel Orientation="Vertical"
                Grid.IsSharedSizeScope="True">

        <Grid Margin="10"
              Grid.IsSharedSizeScope="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
            </Grid.RowDefinitions>

            <Button Grid.Row="0"
                    Grid.Column="0"
                    Margin="10,0,0,10"
                    Content="Bắt đầu chạy"
                    Name="btnRun"
                    Click="ButtonRun_Click" />
        </Grid>

        <Grid Margin="10"
              Grid.IsSharedSizeScope="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Label FontSize="16"
                   Grid.Row="0"
                   Grid.Column="0"
                   VerticalContentAlignment="Center"
                   VerticalAlignment="Center">
                Thông tin log:
            </Label>

            <Button Name="btnScroll"
                    Content="Cuộn Xuống"
                    VerticalAlignment="Bottom"
                    Click="btnScroll_Click" />
            <RichTextBox Padding="4,4,4,10"
                         Grid.Row="1"
                         Grid.Column="0"
                         Background="Black"
                         Foreground="White"
                         MaxHeight="300"
                         Name="txtLog"
                         VerticalScrollBarVisibility="Auto">
            </RichTextBox>
        </Grid>
    </StackPanel>
</UserControl>
